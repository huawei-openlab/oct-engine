{
        "Name": "Benchmark-sysbench-memoryrw-rkt",
        "Summary": "test with sysbench tool",
        "Version": "0.1",
        "Owner": "wangqilin2@huawei.com",
        "Details": "Test memory performance",
        "Group": "Performance/Benchmark/sysbench/memory_rw",
        "License": "Apache 2.0",
        "Requires": [
            {
                
	       "Class": "operOS",
                    "Type": "os",
                    "Distribution": "Ubuntu",
                    "Version": "14.04",
	        "Resource": {
	            "CPU": 4,
	            "Memory": "16GB",
	            "Disk": "200G"
	        }
            },
            {      
                 "Class": "sysbench",
                 "Type": "container",
                 "Distribution": "rkt",
                 "Version": "0.7"
            }
        ],
        "Deploys": [
                        {
                "Object": "hostA",
                "class": "operOS",
                "Containers": [
                        {
                            "Object": "sysbench-rkt-terminal",
                            "Class": "sysbench",
                             "Cmd": "chmod 757 /etc/resolv.conf; echo 'nameserver 8.8.8.8' >> /etc/resolv.conf; apt-get update; apt-get install -y sysbench; sysbench --num-threads=4 --memory-block-size=1024 --memory-total-size=10G  --test=memory run ; sysbench --num-threads=4 --memory-block-size=1024 --memory-total-size=100G  --test=memory run"                     
                        }
                    ],
                 "Cmd": "sudo rkt -debug=true -insecure-skip-verify run docker://ubuntu:14.04 --interactive"
            }     
        ],
        "Collects": [
            {
                "Object": "hostA",
                "Files": ["./source/sysbench-memoryrw-rkt-output.json"]
            }
        ]
}

